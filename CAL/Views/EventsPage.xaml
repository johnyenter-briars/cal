<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CAL.Views.EventsPage"
             Title="Events"
             xmlns:local="clr-namespace:CAL.ViewModels"  
             xmlns:controls="clr-namespace:CAL.Controls"  
             xmlns:model="clr-namespace:CAL.Client.Models.Cal;assembly=CAL.Client"  
             x:Name="browseItemsPage"
             BackgroundColor="Black">

    <CollectionView 
                x:Name="EventsListView"
                ItemsSource="{Binding Events}"
                SelectionMode="None"
                RemainingItemsThreshold="0"
                RemainingItemsThresholdReachedCommand="{Binding RemainingItemsThresholdReachedCommand }"
                VerticalScrollBarVisibility="Always"
            >
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <controls:CalendarEvent CalendarEventCommand="{Binding BindingContext.EventSelectedCommand, Source={x:Reference browseItemsPage}}" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
