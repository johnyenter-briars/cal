<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CAL.Views.EventsPage"
    Title="Events"
    xmlns:ViewModels="clr-namespace:CAL.ViewModels"
    xmlns:controls="clr-namespace:CAL.Controls"
    xmlns:model="clr-namespace:CAL.Client.Models.Cal;assembly=CAL.Client"
    x:Name="browseItemsPage"
    x:DataType="{x:Type ViewModels:EventsViewModel}"
    BackgroundColor="Black">

    <Grid RowDefinitions="Auto,Auto,*" Padding="10" RowSpacing="10">

        <SearchBar Grid.Row="0"
                   Placeholder="Search events..."
                   Text="{Binding SearchText}" 
                   SearchCommand="{Binding SearchCommand}"
                   SearchButtonPressed="SearchBar_SearchButtonPressed"
                   />

        <HorizontalStackLayout Grid.Row="1" Spacing="10">
            <Label Text="Filter by date:" VerticalOptions="Center"/>
            <DatePicker Date="{Binding SelectedDate}" Format="MMM dd, yyyy"/>
            <Button Text="Clear" 
                    Command="{Binding SearchCommand}" 
                    CommandParameter="{x:Null}"
                    Clicked="OnClearDateClicked"/>
        </HorizontalStackLayout>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Events}"
                        RemainingItemsThreshold="5"
                        >
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="2" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Event">
                    <Frame Margin="5" Padding="10" 
                           BackgroundColor="{StaticResource CalendarBackgroundColor}" 
                           BorderColor="{Binding Color}" 
                           CornerRadius="10" 
                           HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ViewModels:EventsViewModel}}, Path=ExecuteEventSelectedCommand }"
                                CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
                            <Label Grid.Row="0" Text="{Binding Name}" 
                                   FontAttributes="Bold" FontSize="16"
                                   TextColor="{StaticResource ContentTextColor}"
                                   />
                            <Label Grid.Row="1" Text="{Binding StartTime, StringFormat='{0:MMM dd, yyyy}'}"
                                   FontSize="14" TextColor="{StaticResource ContentTextColor}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>